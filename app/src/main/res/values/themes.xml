<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BeBaS" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/btn_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>


    <style name="splashScreenTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:statusBarColor">@color/transparent</item>
    </style>

    <style name="ThemeOverlay.BeBaS.AppWidgetContainer" parent="">
        <item name="appWidgetBackgroundColor">@color/light_blue_600</item>
        <item name="appWidgetTextColor">@color/light_blue_50</item>
    </style>

    <style name="btn">
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/bg_rounded_white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
    </style>

    <style name="btn.primary">
        <item name="backgroundTint">@color/btn_blue</item>
    </style>

    <style name="btn.secondary">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="shadowColor">
        <item name="android:shadowColor">@color/black_60off</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowDx">1</item>
    </style>

    <style name="shadowColor.supTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">60sp</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
    </style>

    <style name="shadowColor.title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">44sp</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
    </style>

    <style name="shadowColor.subtitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
    </style>

    <style name="inputText">
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:fontFamily">@font/raleway_regular</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black_60off</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/bg_rounded_white</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textCursorDrawable">@drawable/custome_cursor</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="inputText.password">
        <item name="android:inputType">textPassword</item>
        <item name="android:hint">password</item>
        <item name="android:drawableStart">@drawable/ic_password</item>
    </style>

    <style name="inputText.username">
        <item name="android:inputType">textPersonName</item>
        <item name="android:hint">username</item>
        <item name="android:drawableStart">@drawable/ic_user</item>
    </style>

    <style name="inputText.email">
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:hint">email</item>
        <item name="android:drawableStart">@drawable/ic_email</item>
    </style>

    <style name="backButton">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:src">@drawable/ic_left_arrow</item>
    </style>

    <style name="normalText">
        <item name="fontFamily">@font/raleway_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="mediumText">
        <item name="fontFamily">@font/raleway_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="boldText">
        <item name="fontFamily">@font/raleway_bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.ButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">0dp</item>
        <item name="backgroundTint">@color/bgBlue</item>
        <item name="android:background">@drawable/round_button_blue</item>
    </style>

    <style name="photoProfile">
        <item name="android:scaleType">centerCrop</item>
        <item name="shapeAppearanceOverlay">@style/circle</item>
        <item name="android:padding">5dp</item>
        <item name="strokeColor">@color/white</item>
    </style>

    <style name="photoProfile.user">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="strokeWidth">4dp</item>
    </style>

    <style name="photoProfile.relative">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/black</item>
    </style>

    <style name="circle">
        <item name="cornerSize">50%</item>
    </style>
</resources>